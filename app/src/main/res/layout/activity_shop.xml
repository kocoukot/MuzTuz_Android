<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".Shop">


    <TextView
        android:id="@+id/statisticHead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="15dp"
        android:text="МАГАЗИНЧИК"
        android:textAlignment="center"
        android:textColor="@color/backgroundInfo"
        android:textSize="18dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginBottom="15dp"
        android:adjustViewBounds="true"
        android:src="@drawable/buton_coins1" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginBottom="15dp"

        android:adjustViewBounds="true"
        android:src="@drawable/buton_coins2" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginBottom="15dp"

        android:adjustViewBounds="true"
        android:src="@drawable/buton_coins3" />

    <ImageView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="50dp"
    android:layout_marginBottom="25dp"
    android:adjustViewBounds="true"
    android:src="@drawable/buton_coins4" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:adjustViewBounds="true"
            android:onClick="onGetFreeCoinsShop"
            android:src="@drawable/buton_coins_free"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="50dp" />

        <ImageView
            android:id="@+id/lightsView"
            android:layout_width="match_parent"
            android:layout_height="11dp"
            android:layout_marginHorizontal="50dp"
            android:adjustViewBounds="true"
            app:layout_constraintEnd_toEndOf="@+id/imageView3"
            app:layout_constraintStart_toStartOf="@+id/imageView3"
            app:layout_constraintTop_toTopOf="@+id/imageView3" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>